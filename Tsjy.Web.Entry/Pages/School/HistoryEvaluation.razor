@page "/School/HistoryEvaluation"
@using Tsjy.Application.System.Dtos
@using Tsjy.Application.System.Dtos.History
@using Tsjy.Core.Enums
@using BootstrapBlazor.Components
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "SchoolUser")]

<div class="dashboard-container fade-in">
    @* 1. Header: 4个 KPI 渐变卡片 *@
    <div class="row g-3 mb-4">
        <div class="col-6 col-lg-3">
            <div class="kpi-card kpi-blue">
                <div class="kpi-icon"><i class="fa-solid fa-layer-group"></i></div>
                <div class="kpi-content">
                    <div class="kpi-value">@TotalTasks</div>
                    <div class="kpi-label">历史参评次数</div>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="kpi-card kpi-purple">
                <div class="kpi-icon"><i class="fa-solid fa-chart-line"></i></div>
                <div class="kpi-content">
                    <div class="kpi-value">@(AvgScore.ToString("F1"))</div>
                    <div class="kpi-label">历史平均得分</div>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="kpi-card kpi-green">
                <div class="kpi-icon"><i class="fa-solid fa-clock-rotate-left"></i></div>
                <div class="kpi-content">
                    <div class="kpi-value">@(LastScore?.ToString("F1") ?? "-")</div>
                    <div class="kpi-label">最近一次得分</div>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="kpi-card kpi-orange">
                <div class="kpi-icon"><i class="fa-solid fa-list-check"></i></div>
                <div class="kpi-content">
                    <div class="kpi-value">@PendingCount</div>
                    <div class="kpi-label">当前待办任务</div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        @* 2. Main Area: 左侧趋势图 + 历史列表 *@
        <div class="col-12 col-lg-8">
            <Card IsShadow="true" class="mb-4 border-0 h-400">
                <HeaderTemplate>
                    <div class="d-flex align-items-center">
                        <i class="fa-solid fa-chart-area text-primary me-2"></i>
                        <span class="fw-bold fs-5">历史得分趋势</span>
                    </div>
                </HeaderTemplate>
                <BodyTemplate>
                    @if (TrendData.Any())
                    {
                        <Chart @ref="LineChart" Type="ChartType.Line" OnInitAsync="OnInit" Responsive="true" />
                    }
                    else
                    {
                        <div class="d-flex flex-column justify-content-center align-items-center h-100 text-muted">
                            <i class="fa-regular fa-folder-open fs-1 mb-2"></i>
                            <span>暂无历史数据</span>
                        </div>
                    }
                </BodyTemplate>
            </Card>

            <div class="history-list-section">
                <h5 class="fw-bold mb-3"><i class="fa-solid fa-file-invoice me-2 text-primary"></i>历史评价档案</h5>
                @if (FinishedTasks.Any())
                {
                    <div class="row g-3">
                        @foreach (var task in FinishedTasks)
                        {
                            <div class="col-12">
                                <div class="history-item-card shadow-sm">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <div class="fw-bold fs-5">@task.BatchName</div>
                                            <div class="text-muted small mt-1">
                                                <i class="fa-regular fa-calendar me-1"></i>
                                                @(task.UploadEnd?.ToString("yyyy-MM-dd") ?? "未知日期")
                                            </div>
                                        </div>
                                        <div class="text-end">
                                            <div class="score-display text-primary fw-bold">
                                                @(task.FinalScore?.ToString("F1") ?? "-") <span class="fs-6">分</span>
                                            </div>
                                            <span class="badge bg-success bg-opacity-10 text-success rounded-pill">已完成</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <Empty Text="暂无历史归档记录" />
                }
            </div>
        </div>

        @* 3. Sidebar: 右侧侧边栏 *@
        <div class="col-12 col-lg-4">
            <div class="d-flex flex-column gap-4 h-100">

                <Card IsShadow="true" class="border-0">
                    <HeaderTemplate>
                        <span class="fw-bold text-danger"><i class="fa-solid fa-bell me-2"></i>待办预警</span>
                    </HeaderTemplate>
                    <BodyTemplate>
                        @if (ActiveTasks.Any())
                        {
                            <div class="d-flex flex-column gap-3">
                                @foreach (var task in ActiveTasks)
                                {
                                    var daysLeft = (task.UploadEnd - DateTime.Now)?.Days ?? 0;
                                    var urgencyClass = daysLeft <= 3 ? "border-danger bg-danger bg-opacity-10" : "border-warning bg-warning bg-opacity-10";

                                    <div class="task-warning-card p-3 rounded border-start border-4 @urgencyClass cursor-pointer" @onclick="() => OnDoTask(task.TaskId)">
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="badge bg-white text-dark shadow-sm">进行中</span>
                                            <small class="text-muted">截止: @task.UploadEnd?.ToString("MM-dd")</small>
                                        </div>
                                        <div class="fw-bold mb-1">@task.BatchName</div>
                                        <div class="d-flex align-items-center text-danger small">
                                            <i class="fa-regular fa-clock me-1"></i>
                                            <span>剩余 @(daysLeft > 0 ? daysLeft + " 天" : "即将截止")</span>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4 text-muted">
                                <i class="fa-solid fa-mug-hot fs-2 mb-2"></i>
                                <div>当前无待办任务</div>
                            </div>
                        }
                    </BodyTemplate>
                </Card>

                <div class="best-score-card shadow h-100 position-relative overflow-hidden text-white d-flex flex-column justify-content-center align-items-center rounded-3 p-4">
                    <div class="circle-bg circle-1"></div>
                    <div class="circle-bg circle-2"></div>
                    <div class="z-1 text-center">
                        <div class="mb-3"><i class="fa-solid fa-medal fa-3x text-warning"></i></div>
                        <div class="display-4 fw-bold mb-0">
                            @(BestScore.FinalScore?.ToString("F1") ?? "-")
                        </div>
                        <div class="fs-6 mb-3 opacity-75">历史最高得分</div>
                        <div class="badge bg-white text-primary px-3 py-2 rounded-pill shadow-sm text-truncate" style="max-width: 200px;">
                            @BestScore.BatchName
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<style>
    .h-400 {
        height: 400px;
    }

    .cursor-pointer {
        cursor: pointer;
        transition: all 0.2s;
    }

        .cursor-pointer:hover {
            transform: translateY(-2px);
        }

    /* KPI Cards */
    .kpi-card {
        padding: 1.5rem;
        border-radius: 12px;
        color: white;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0 4px 6px rgba(0,0,0,0.05);
    }

    .kpi-icon {
        font-size: 2rem;
        opacity: 0.8;
    }

    .kpi-value {
        font-size: 1.8rem;
        font-weight: bold;
        line-height: 1.2;
    }

    .kpi-label {
        font-size: 0.9rem;
        opacity: 0.9;
    }

    .kpi-blue {
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
    }

    .kpi-purple {
        background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
    }

    .kpi-green {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    }

    .kpi-orange {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
    }

    /* History List */
    .history-item-card {
        background: white;
        padding: 1.25rem;
        border-radius: 10px;
        border-left: 5px solid #0d6efd;
        transition: transform 0.2s;
    }

        .history-item-card:hover {
            transform: translateX(5px);
        }

    .score-display {
        font-size: 1.5rem;
    }

    /* Best Score Widget */
    .best-score-card {
        background: linear-gradient(135deg, #2468f2 0%, #66b1ff 100%);
    }

    .circle-bg {
        position: absolute;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.1);
    }

    .circle-1 {
        width: 180px;
        height: 180px;
        top: -40px;
        right: -40px;
    }

    .circle-2 {
        width: 120px;
        height: 120px;
        bottom: -20px;
        left: -20px;
    }

    .z-1 {
        z-index: 1;
    }
</style>
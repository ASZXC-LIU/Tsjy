@page "/Login"
@attribute [AllowAnonymous]
@layout LoginLayout
@namespace FurionBlazorServerEFAuth202502.Web.Entry.Pages
@using Tsjy.Core.Enums

<div class="gemini-container">
    <div class="gemini-card">
        <div class="logo-section">
            <img src="images/logo.png" alt="Nexus Logo" class="logo-img" />
            <h2 class="form-title">NEXUS</h2>
            <div class="form-subtitle">特殊教育评价系统</div>
        </div>

        <form method="post" style="width: 100%;">
            <BootstrapInputGroup>
                <BootstrapInputGroupIcon Icon="fa fa-fw fa-user" />
                <BootstrapInput TValue="string" name="UserName" maxlength="16" IsAutoFocus="true" PlaceHolder="请输入用户名" @bind-Value="loginInput.UserName" />
            </BootstrapInputGroup>

            <BootstrapInputGroup>
                <BootstrapInputGroupIcon Icon="fa fa-fw fa-lock" />
                <BootstrapPassword name="password" PlaceHolder="请输入密码" @bind-Value="loginInput.Password" />
            </BootstrapInputGroup>

            <BootstrapInputGroup>
                <BootstrapInputGroupIcon Icon="fa-solid fa-users-gear" />
                <Select TValue="UserRole?"
                        @bind-Value="loginInput.Role"
                        Items="UserRoles"
                        PlaceHolder="请选择登录角色"
                        ShowLabel="false" />
            </BootstrapInputGroup>

            <Button class="btn-gemini" ButtonType="ButtonType.Button" Size="Size.None" IsBlock="true" OnClick="DoLogin" >
                <i class="fa-solid fa-arrow-right-to-bracket me-2"></i> 立即登录
            </Button>

            <div class="link-group">
                <LinkButton Text="注册新账号" OnClick="OnRegister" class="btn-link" />
                <LinkButton Text="忘记密码?" OnClick="OnForgotPassword" class="btn-link" />
            </div>
        </form>
    </div>
</div>
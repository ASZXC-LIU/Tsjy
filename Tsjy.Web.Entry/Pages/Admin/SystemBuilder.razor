@page "/Admin/EvalBuilder"
@page "/Admin/EvalBuilder/{Category}/{TreeId:long}"
@using Tsjy.Application.System.Dtos
@using Tsjy.Core.Entities
@using Tsjy.Core.Enums
@using Tsjy.Core.MyHelper
@inherits BootstrapComponentBase

<PageTitle>评价体系构建器</PageTitle>

@* 添加自定义样式优化滚动条和卡片高度 *@
<style>
    /* 1. 页面高度容器 */
    .full-content-height {
        /* 计算逻辑：
               100vh (视口总高)
               - 56px (顶部 Header)
               - 40px (MainLayout padding)
               - 40px (底部 Footer 及间隙)
               = 约减去 140px。
               你可以根据实际情况微调这个数值。
            */
        height: calc(100vh - 140px);
    }

    /* 2. 关键修复：强制卡片内容区不自动撑开 */
    /* 当 Card 添加了 fixed-card 类时生效 */
    .fixed-card .card-body {
        flex: 1 1 auto;
        min-height: 0; /* ★★★ 核心：允许 Flex 子项收缩到 0，防止撑破父容器 */
        overflow: hidden; /* ★★★ 核心：隐藏卡片自身的溢出，交给内部 div 滚动 */
        padding: 0; /* 清除默认内边距，我们在内部 div 补上，以免滚动条贴边 */
    }

    /* 3. 自定义滚动条区域 */
    .custom-scroll {
        height: 100%; /* 占满 card-body 的高度 */
        overflow-y: auto; /* 开启垂直滚动 */
        padding: 1rem; /* 补上 padding */
        /* 滚动条样式美化 */
        scrollbar-width: thin;
        scrollbar-color: #dee2e6 #fff;
    }

        .custom-scroll::-webkit-scrollbar {
            width: 6px;
        }

        .custom-scroll::-webkit-scrollbar-track {
            background: #f8f9fa;
        }

        .custom-scroll::-webkit-scrollbar-thumb {
            background-color: #dee2e6;
            border-radius: 4px;
        }
</style>

<div class="container-fluid p-3 full-content-height">
    <div class="row g-3 h-100">
        @* --- 左侧树形区保持不变 --- *@
        <div class="col-12 col-md-3 h-100">
            <Card IsShadow="true" class="h-100 border-0 shadow-sm rounded-3 d-flex flex-column">
                @* ... HeaderTemplate 保持不变 ... *@
                <HeaderTemplate>
                    <div class="d-flex justify-content-between align-items-center w-100 py-1">
                        <div class="d-flex align-items-center text-primary">
                            <i class="fa-solid fa-folder-tree me-2"></i>
                            <span class="fw-bold fs-6">指标体系树</span>
                        </div>
                        <div class="d-flex gap-2">
                            @if (!TreeItems.Any())
                            {
                                <Button Icon="fa-solid fa-plus" Size="Size.ExtraSmall" Color="Color.Success" IsOutline="true"
                                        OnClick="OnCreateRoot" TooltipText="新建评价体系" />
                            }
                            else
                            {
                                <Button Icon="fa-solid fa-plus" Size="Size.ExtraSmall" Color="Color.Primary" IsOutline="true"
                                        Text="添加子级" OnClick="OnBeginCreateChild" TooltipText="在当前节点下添加" />

                                <PopConfirmButton Placement="Placement.Bottom" Color="Color.Danger" IsOutline="true"
                                                  ConfirmButtonColor="Color.Danger"
                                                  Icon="fa-solid fa-trash-can"
                                                  Size="Size.ExtraSmall"
                                                  Content="确定要删除该节点及其所有子节点吗？"
                                                  IsDisabled="@(SelectedNode == null)"
                                                  OnConfirm="OnDeleteNode" />
                            }
                        </div>
                    </div>
                </HeaderTemplate>

                <BodyTemplate>
                    <div class="custom-scroll h-100 pe-2">
                        @if (TreeItems.Any())
                        {
                            <TreeView TItem="EvalNodeTreeDto" Items="@TreeItems"
                                      OnTreeItemClick="@OnTreeItemClick"
                                      ShowIcon="true" IsAccordion="true"
                                      ClickToggleNode="false" />
                        }
                        else
                        {
                            <div class="d-flex flex-column align-items-center justify-content-center h-75 text-muted">
                                <i class="fa-regular fa-folder-open fa-3x mb-3 opacity-50"></i>
                                <span>暂无体系数据</span>
                                <small>点击右上角新建按钮开始</small>
                            </div>
                        }
                    </div>
                </BodyTemplate>
            </Card>
        </div>

        @* --- 右侧：表单编辑区 --- *@
        <div class="col-12 col-md-9 h-100">
            <Card IsShadow="true" class="h-100 border-0 shadow-sm rounded-3 d-flex flex-column fixed-card">
                <HeaderTemplate>
                    @* ... Header 保持不变 ... *@
                    <div class="py-1">
                        @if (SelectedNode != null)
                        {
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px;height: 40px;">
                                        <i class="fa-solid fa-pen-to-square fs-5"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold fs-6">编辑节点信息</div>
                                        <div class="text-muted small">
                                            类型：<span class="text-dark fw-medium">@CurrentEditModel.Type.GetDescription()</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center">
                                    <span class="text-muted small me-2">编码：</span>
                                    <span class="badge bg-warning text-dark px-3 py-2 rounded-pill font-monospace">
                                        @CurrentEditModel.Code
                                    </span>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="text-muted d-flex align-items-center">
                                <i class="fa-solid fa-circle-info me-2 text-info"></i>
                                <span>请在左侧选择一个节点进行操作</span>
                            </div>
                        }
                    </div>
                </HeaderTemplate>

                <BodyTemplate>
                    <div class="custom-scroll pe-3 ps-1 pb-5">
                        @if (SelectedNode != null)
                        {
                            <ValidateForm Model="@CurrentEditModel" OnValidSubmit="OnSaveNode">

                                @* --- 动态上下文显示区域 --- *@
                                @if (CurrentEditModel.Type == EvalNodeType.SecondIndicator)
                                {
                                    <div class="alert alert-info border-0 bg-info bg-opacity-10 mb-4 shadow-sm">
                                        <div class="d-flex flex-column gap-2">
                                            @{
                                                var ancestors = GetAncestors(CurrentEditModel.ParentId);
                                            }
                                            @if (ancestors.Count >= 2)
                                            {
                                                <div><small class="text-muted d-block">所属体系</small><strong>@ancestors[0].Name</strong></div>
                                                <div><small class="text-muted d-block">一级指标</small><strong>@ancestors[1].Name</strong></div>
                                            }
                                        </div>
                                    </div>
                                }
                                else if (CurrentEditModel.Type == EvalNodeType.Reference)
                                {
                                    <div class="alert alert-primary border-0 bg-primary bg-opacity-10 mb-4 shadow-sm">
                                        <div class="d-flex flex-column gap-2">
                                            @{
                                                var ancestors = GetAncestors(CurrentEditModel.ParentId);
                                            }
                                            @if (ancestors.Count >= 3)
                                            {
                                                <div><small class="text-muted d-block">所属体系</small><strong>@ancestors[0].Name</strong></div>
                                                <div><small class="text-muted d-block">一级指标</small><strong>@ancestors[1].Name</strong></div>
                                                <div><small class="text-muted d-block">二级指标</small><strong>@ancestors[2].Name</strong></div>
                                            }
                                        </div>
                                    </div>
                                }
                                else if (CurrentEditModel.Type == EvalNodeType.Points)
                                {
                                    <div class="card bg-warning bg-opacity-10 border-warning border-opacity-25 mb-4">
                                        <div class="card-body">
                                            @{
                                                var ancestors = GetAncestors(CurrentEditModel.ParentId);
                                            }
                                            @if (ancestors.Count >= 4)
                                            {
                                                <div class="d-flex flex-column gap-2 mb-3 border-bottom border-warning border-opacity-25 pb-3">
                                                    <div class="border-bottom border-warning border-opacity-25 pb-2">
                                                        <small class="text-muted d-block">一级指标</small>
                                                        <strong>@ancestors[1].Name</strong>
                                                    </div>
                                                    <div class="border-bottom border-warning border-opacity-25 pb-2">
                                                        <small class="text-muted d-block">二级指标</small>
                                                        <strong>@ancestors[2].Name</strong>
                                                    </div>
                                                    <div>
                                                        <small class="text-muted d-block">评估参考点</small>
                                                        <strong>@ancestors[3].Name</strong>
                                                    </div>
                                                </div>

                                                <div>
                                                    <small class="text-muted d-block mb-1"><i class="fa-solid fa-book-open me-1"></i>评估方法</small>
                                                    <div class="p-2 bg-white bg-opacity-50 rounded text-dark" style="white-space: pre-wrap;">@GetMethodContent(ancestors[3].Id)</div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }


                                @* --- 基础信息编辑区 --- *@
                                <div class="card border-0 bg-light bg-opacity-50 rounded-3 mb-4">
                                    <div class="card-body">
                                        <h6 class="card-title text-secondary mb-3 d-flex align-items-center">
                                            <i class="fa-solid fa-list-check me-2"></i>基础属性
                                        </h6>
                                        <div class="row g-3">
                                            <div class="col-md-3">
                                                <BootstrapInput @bind-Value="CurrentEditModel.Code" ShowLabel="true" DisplayText="指标序号" Placeholder="例如: 1.1" />
                                            </div>
                                            <div class="col-md-3">
                                                <BootstrapInputNumber @bind-Value="CurrentEditModel.MaxScore" ShowLabel="true" DisplayText="标准分值" />
                                            </div>
                                            <div class="col-md-3">
                                                <BootstrapInputNumber @bind-Value="CurrentEditModel.OrderIndex" ShowLabel="true" DisplayText="显示排序" />
                                            </div>

                                            @* 动态 Label 的 Name 输入框 *@
                                            <div class="col-12">
                                                @{
                                                    string nameLabel = "节点内容";
                                                    string placeHolder = "请输入内容";
                                                    if (CurrentEditModel.Type == EvalNodeType.System) { nameLabel = "体系名称"; placeHolder = "请输入评价体系名称"; }
                                                    else if (CurrentEditModel.Type == EvalNodeType.FirstIndicator) { nameLabel = "一级指标名称"; placeHolder = "请输入一级指标名称"; }
                                                    else if (CurrentEditModel.Type == EvalNodeType.SecondIndicator) { nameLabel = "二级指标名称"; placeHolder = "请输入二级指标名称"; }
                                                    else if (CurrentEditModel.Type == EvalNodeType.Reference) { nameLabel = "评估参考点"; placeHolder = "请输入评估参考点内容"; }
                                                    else if (CurrentEditModel.Type == EvalNodeType.Points) { nameLabel = "评估要点"; placeHolder = "请输入具体打分点内容"; }
                                                }
                                                <Textarea @bind-Value="CurrentEditModel.Name" ShowLabel="true" DisplayText="@nameLabel" Rows="3" Placeholder="@placeHolder" class="shadow-sm" />
                                            </div>

                                            @* 如果是 Reference 节点，额外显示“评估方法”输入框 *@
                                            @if (CurrentEditModel.Type == EvalNodeType.Reference)
                                            {
                                                <div class="col-12">
                                                    <Textarea @bind-Value="CurrentMethodContent" ShowLabel="true" DisplayText="评估方法" Rows="4"
                                                              Placeholder="请输入该参考点对应的评估方法说明..." class="shadow-sm border-primary border-opacity-25" />
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>

                                @* --- 评分规则区 --- *@
                                <div class="card border-0 bg-light bg-opacity-50 rounded-3 mb-4">
                                    <div class="card-body">
                                        <h6 class="card-title text-secondary mb-3 d-flex align-items-center">
                                            <i class="fa-solid fa-scale-balanced me-2"></i>评分规则模板
                                        </h6>
                                        <div class="row g-3 mb-3">
                                            <div class="col-md-7">
                                                <div class="d-flex align-items-end gap-2">
                                                    <div class="flex-grow-1">
                                                        <Select @bind-Value="CurrentEditModel.ScoringTemplateId"
                                                                Items="ScoringModelOptions"
                                                                ShowLabel="true"
                                                                DisplayText="选择评分模板"
                                                                OnSelectedItemChanged="OnScoringModelChanged"
                                                                PlaceHolder="请选择一个适用的评分标准模板" />
                                                    </div>
                                                    <Button Icon="fa-solid fa-plus" Color="Color.Success" IsOutline="true"
                                                            OnClick="OnCreateScoringModel" TooltipText="新建评分模板" />
                                                </div>
                                            </div>
                                        </div>

                                        @* 模板预览 (保持不变) *@
                                        @if (PreviewScoringItems != null && PreviewScoringItems.Any())
                                        {
                                            <div class="rounded-3 border overflow-hidden">
                                                <div class="bg-white px-3 py-2 border-bottom d-flex align-items-center justify-content-between">
                                                    <span class="small text-secondary fw-bold">
                                                        <i class="fa-solid fa-eye me-1"></i> 模板预览：@CurrentScoringModelName
                                                    </span>
                                                </div>
                                                <table class="table table-sm table-hover table-striped mb-0 small bg-white">
                                                    <thead class="table-light">
                                                        <tr>
                                                            <th width="80" class="text-center border-0">等级</th>
                                                            <th width="100" class="text-center border-0">系数</th>
                                                            <th class="border-0">评分原则/描述</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in PreviewScoringItems)
                                                        {
                                                            <tr>
                                                                <td class="text-center align-middle">
                                                                    <span class="badge bg-secondary bg-opacity-25 text-dark border">@item.LevelCode</span>
                                                                </td>
                                                                <td class="text-center align-middle font-monospace text-primary">@item.Ratio</td>
                                                                <td class="align-middle text-muted">@item.Description</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        }
                                    </div>
                                </div>

                                @* 底部按钮区 *@
                                <div class="d-flex justify-content-end pt-2">
                                    <Button ButtonType="ButtonType.Submit" Icon="fa-solid fa-floppy-disk"
                                            Color="Color.Primary" Text="保存所有更改" IsAsync="true"
                                            class="px-4 shadow-sm" />
                                </div>
                            </ValidateForm>
                        }
                        else
                        {
                            @* 空状态保持不变 *@
                            <div class="d-flex flex-column align-items-center justify-content-center h-100 text-muted pb-5">
                                <div class="bg-light rounded-circle p-4 mb-3 shadow-sm">
                                    <i class="fa-solid fa-sitemap fa-3x text-secondary opacity-50"></i>
                                </div>
                                <h5 class="fw-normal mb-2">未选择指标节点</h5>
                                <p class="small opacity-75 mb-4">请在左侧树状菜单中点击任意节点以查看详情或添加子指标。</p>
                                @if (!TreeItems.Any())
                                {
                                    <Button Color="Color.Primary" Icon="fa-solid fa-wand-magic-sparkles"
                                            OnClick="OnCreateRoot" class="px-4 shadow-sm">
                                        立即初始化评价体系
                                    </Button>
                                }
                            </div>
                        }
                    </div>
                </BodyTemplate>
            </Card>
        </div>
    </div>
</div>
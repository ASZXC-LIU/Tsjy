@page "/Review/ReviewDetail/{TaskId:long}"
@using Tsjy.Application.System.Dtos
@using Tsjy.Core.MyHelper
@using Tsjy.Core.Enums
@attribute [Authorize(Roles = "Expert")]
@namespace Tsjy.Web.Entry.Pages.Review

<div class="review-detail-container">
    @* 1. 顶部控制条 *@
    <div class="review-top-bar d-flex justify-content-between align-items-center px-4 shadow-sm">
        <div class="nav-left d-flex align-items-center">
            <Button Color="Color.Secondary" Icon="fa-solid fa-house" Text="返回工作台" OnClick="BackToDashboard" class="me-3" />
            <div class="progress-info fw-bold">
                评审进度: <span class="text-primary">@(CurrentNodeIndex + 1)</span> / @TotalNodesCount
            </div>
        </div>
        <div class="nav-right d-flex gap-2">
            <Button Color="Color.Primary" Icon="fa-solid fa-chevron-left" Text="上一个"
                    IsEnabled="@(CurrentNodeIndex > 0)" OnClick="OnPrevNode" />
            <Button Color="Color.Primary" Icon="fa-solid fa-chevron-right" Text="下一个"
                    IsEnabled="@(CurrentNodeIndex < TotalNodesCount - 1)" OnClick="OnNextNode" />
        </div>
    </div>

    @if (CurrentNodeDetail == null)
    {
        <div class="loading-overlay">
            <div class="spinner-border text-primary"></div>
            <p class="mt-2">正在加载评审内容...</p>
        </div>
    }
    else
    {
        <div class="review-main-split">
            @* 2. 左侧：材料展示区域 *@
            <div class="material-panel bg-dark d-flex flex-column">
                @* ★ 新增：材料视角切换按钮 ★ *@
                <div class="material-perspective-tabs p-2 d-flex gap-2">
                    <Button Color="@(CurrentPerspective == "School" ? Color.Primary : Color.Dark)"
                            Text="受评单位佐证" OnClick="@(() => SwitchPerspective("School"))" Size="Size.Small" />
                    <Button Color="@(CurrentPerspective == "Inspection" ? Color.Primary : Color.Dark)"
                            Text="巡视组现场材料" OnClick="@(() => SwitchPerspective("Inspection"))" Size="Size.Small" />
                </div>
                <div class="material-toolbar px-3 py-2 d-flex align-items-center gap-2">
                    <span class="text-white-50 small">当前指标材料</span>
                    <Select TValue="string" @bind-Value="SelectedEvidenceUrl" Items="EvidenceFileOptions"
                            ShowLabel="false" class="material-file-select"
                            IsDisabled="@(EvidenceFileOptions.Count == 0)" />
                </div>

                <div class="flex-grow-1 position-relative">
                    @{
                        // 动态判断当前显示哪方的材料
                        var displayFiles = CurrentPerspective == "School" ? CurrentNodeDetail.FileUrls : CurrentNodeDetail.InspectionFileUrls;
                        var displayName = CurrentPerspective == "School" ? "受评单位" : "巡视组";
                    }

                    @if (displayFiles?.Any() == true && !string.IsNullOrWhiteSpace(SelectedEvidenceUrl))
                    {
                        <iframe src="@SelectedEvidenceUrl" class="pdf-viewer"></iframe>
                    }
                    else
                    {
                        <div class="empty-material text-white-50 d-flex flex-column align-items-center justify-content-center h-100">
                            <i class="fa-solid fa-file-circle-exclamation fa-4x mb-3"></i>
                            <p>@displayName 未上传 PDF 佐证材料</p>
                        </div>
                    }
                </div>
            </div>

            @* 3. 右侧：信息与评审区域 *@
            <div class="action-panel border-start bg-white">
                @* 右侧上半：指标信息 *@
                <div class="info-section p-4 border-bottom">
                    <nav aria-label="breadcrumb" class="mb-2">
                        <ol class="breadcrumb mb-0 small">
                            <li class="breadcrumb-item text-muted">@CurrentNodeDetail.FirstIndicator</li>
                            <li class="breadcrumb-item text-muted">@CurrentNodeDetail.SecondIndicator</li>
                        </ol>
                    </nav>
                    <h5 class="fw-bold text-dark mb-3">@CurrentNodeDetail.PointName</h5>

                    <div class="info-block mb-3">
                        <label>评估要点 (Reference)</label>
                        <div class="info-content">@CurrentNodeDetail.ReferencePoint</div>
                    </div>

                    <div class="info-block">
                        <label>评估方法 (Method)</label>
                        <div class="info-content">@CurrentNodeDetail.Method</div>
                    </div>
                </div>
                <div class="ai-assist-section p-4 border-bottom bg-white">
                    <Button Color="Color.Info" Icon="fa-solid fa-robot" Text="AI 智能辅助评审"
                            OnClick="OnAiAssistClick" IsAsync="true" class="mb-2 shadow-sm" />

                    @if (ShowAiResult)
                    {
                        <div class="ai-result-box mt-3 animate__animated animate__fadeIn">
                            <label class="form-label small fw-bold text-info">
                                <i class="fa-solid fa-wand-sparkles me-1"></i>AI 辅助分析建议
                            </label>
                            <Textarea @bind-Value="@AiResult" Rows="6" IsDisabled="true"
                                      placeholder="AI 正在深度解析材料中..." class="bg-light" />
                        </div>
                    }
                </div>
                @* 右侧下半：操作区域 *@
                <div class="operation-section p-4 bg-light">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="mb-0 fw-bold">评分等级 (标准分: @CurrentNodeDetail.MaxScore)</h6>
                        @if (CurrentNodeDetail.Status != AuditStatus.Pending)
                        {
                            @* 确保这里使用的是 GetDescription *@
                            <span class="badge @(CurrentNodeDetail.Status == AuditStatus.Approved ? "bg-success" : "bg-danger")">
                                当前状态: @CurrentNodeDetail.Status.GetDescription()
                            </span>
                        }
                    </div>

                    <div class="scoring-box mb-4">
                        <RadioList TValue="long" Items="@ScoringOptions" @bind-Value="@SelectedScoringItemId" IsVertical="true" />
                    </div>

                    <div class="mb-4">
                        <label class="form-label small fw-bold text-muted">驳回建议 (若驳回则必填)</label>
                        <Textarea @bind-Value="@RejectReason" Rows="4" placeholder="请详细输入修改意见..." />
                    </div>

                    <div class="row g-2">
                        <div class="col-6">
                            <Button Color="Color.Danger" IsBlock="true" OnClick="OnReject" Icon="fa-solid fa-xmark"> 予以驳回 </Button>
                        </div>
                        <div class="col-6">
                            <Button Color="Color.Success" IsBlock="true" OnClick="OnApprove" Icon="fa-solid fa-check"> 保存并提交 </Button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

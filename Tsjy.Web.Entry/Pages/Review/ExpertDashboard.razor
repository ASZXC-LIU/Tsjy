@page "/Review/Dashboard"
@using Tsjy.Application.System.Dtos
@using Tsjy.Core.Enums
@attribute [Authorize(Roles = "Expert")]
@namespace Tsjy.Web.Entry.Pages.Review

<div class="container-fluid page-wrapper animate__animated animate__fadeIn">
    <div class="welcome-section mb-4">
        <h2 class="page-title fw-bold text-dark">专家评审工作台</h2>
        <p class="text-muted">请选择需要评审的任务进行细节核查与打分。</p>
    </div>

    @if (TaskList == null || !TaskList.Any())
    {
        <div class="empty-state card border-0 shadow-sm rounded-4 py-5 text-center">
            <div class="text-muted mb-3 opacity-25">
                <i class="fa-solid fa-clipboard-check fa-5x"></i>
            </div>
            <h4 class="text-secondary">暂无待评审任务</h4>
            <p class="text-muted">当前没有分配给您的考评任务，请稍后再试。</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var task in TaskList)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="task-card card h-100 border-0 shadow-sm rounded-4 hover-lift">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div class="badge bg-primary-subtle text-primary rounded-pill px-3">评审中</div>
                                <span class="small text-muted"><i class="fa-regular fa-clock me-1"></i>截止：@task.UploadEnd?.ToString("yyyy-MM-dd")</span>
                            </div>
                            <h5 class="fw-bold mb-2">@task.BatchName</h5>
                            <div class="info-item mb-3">
                                <i class="fa-solid fa-school text-secondary me-2"></i>
                                <span class="text-dark">受评单位：@task.SchoolName</span>
                            </div>
                            <div class="progress-box mb-4">
                                <div class="d-flex justify-content-between small mb-1">
                                    <span>评审进度</span>
                                    <span>@task.ReviewedCount / @task.TotalCount</span>
                                </div>
                                <Progress Value="@GetProgress(task)" Color="Color.Success" Height="6" IsShowValue="false" />
                            </div>
                            <Button Color="Color.Primary" IsBlock="true" class="rounded-pill shadow-sm" OnClick="@(() => OnStartReview(task.TaskId))">
                                <i class="fa-solid fa-magnifying-glass-chart me-2"></i> 进入评审
                            </Button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
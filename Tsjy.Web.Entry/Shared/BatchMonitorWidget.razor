@using Tsjy.Application.System.Dtos.BatchDtos
@using Tsjy.Application.System.IService
@using Tsjy.Core.Enums
@inherits BootstrapComponentBase

<div class="batch-monitor-widget">
    @if (IsLoading)
    {
        <div class="loading-wrapper">
            <Spinner Color="Color.Primary" Size="Size.Large" />
            <div class="mt-3 text-muted">正在分析任务数据...</div>
        </div>
    }
    else
    {
        <Tab IsCard="true">
            @* Tab 1: 单位填报监控 *@
            <TabItem Text="单位填报进度">
                <div class="p-3">
                    <div class="row mb-3">
                        <div class="col-12">
                            <div class="alert alert-info">
                                <i class="fa-solid fa-school me-2"></i>
                                共 <strong>@Data.OrgProgresses.Count</strong> 家单位，
                                已提交 <strong>@Data.OrgProgresses.Count(x => x.Status != TaskStatu.Pending && x.Status != TaskStatu.Sent)</strong> 家
                            </div>
                        </div>
                    </div>

                    <Table TItem="OrgProgressDto" Items="@Data.OrgProgresses" IsStriped="true" IsBordered="false" ShowToolbar="false" IsPagination="true" PageItems="10">
                        <TableColumns>
                            <TableColumn @bind-Field="@context.OrgName" Text="单位名称" />
                            <TableColumn @bind-Field="@context.TargetId" Text="单位名称" />
                            <TableColumn @bind-Field="@context.Status" Text="当前状态" Align="Alignment.Center">
                                <Template Context="row">
                                    <Tag Color="@GetStatusColor(row.Value)">@row.Value.ToDescriptionString()</Tag>
                                </Template>
                            </TableColumn>
                            <TableColumn @bind-Field="@context.SubmittedAt" Text="提交时间" FormatString="yyyy-MM-dd HH:mm" />
                        </TableColumns>
                    </Table>
                </div>
            </TabItem>

            @* Tab 2: 专家评审监控 *@
            <TabItem Text="专家评审进度">
                <div class="p-3">
                    <Table TItem="ExpertProgressDto" Items="@Data.ExpertProgresses" IsStriped="true" ShowToolbar="false" IsPagination="true" PageItems="10">
                        <TableColumns>
                            <TableColumn @bind-Field="@context.ExpertName" Text="评审专家" Width="150" />
                            <TableColumn @bind-Field="@context.ExpertId" Text="评审专家" Width="150" />
                            
                            <TableColumn @bind-Field="@context.ProgressRate" Text="打分进度" Align="Alignment.Center">
                                <Template Context="row">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-fill me-3">
                                            <Progress Value="@((int)row.Row.ProgressRate)" Color="Color.Success" IsStriped="true" Height="15" />
                                        </div>
                                        <div class="text-nowrap small">
                                            @row.Row.CompletedTasks / @row.Row.TotalTasks
                                        </div>
                                    </div>
                                </Template>
                            </TableColumn>
                        </TableColumns>
                    </Table>
                </div>
            </TabItem>

            @* Tab 3: 视导组监控 *@
            <TabItem Text="视导组分配">
                <div class="p-3">
                    @if (!Data.InspectionGroups.Any())
                    {
                        <Empty Text="暂无视导组信息" />
                    }
                    else
                    {
                        <div class="row g-3">
                            @foreach (var group in Data.InspectionGroups)
                            {
                                <div class="col-md-6">
                                    <div class="card shadow-sm h-100 border-0 bg-light">
                                        <div class="card-body">
                                            <h6 class="card-title fw-bold text-primary">
                                                <i class="fa-solid fa-users-viewfinder me-2"></i>@group.TeamName
                                            </h6>
                                            <hr />
                                            <div class="mb-2">
                                                <span class="text-muted small">小组成员：</span>
                                                <div class="d-flex flex-wrap gap-1 mt-1">
                                                    @foreach (var m in group.MemberNames)
                                                    {
                                                        <span class="badge bg-white text-dark border">@m</span>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </TabItem>
        </Tab>
    }
</div>